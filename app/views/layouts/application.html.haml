!!!
%html
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title= t(:title, default: 'World of Tanks Replays Visualization')
    = stylesheet_link_tag 'application', media: 'all',
      'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = nav_bar brand: t('Visualize the World'), brand_link: root_path,
      static: :top do
      = link_to new_wot_replay_path,
        class: 'btn btn-primary pull-right upload-button' do
        = fa_icon 'upload'
        = t('Upload Replay')
    = bootstrap_flash
    .container
      = yield
